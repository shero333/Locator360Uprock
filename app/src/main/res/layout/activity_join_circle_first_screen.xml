        <com.goodiebag.pinview.Pinview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:pinLength="6"/>

        <TextView
            android:id="@+id/txt_msg_cons_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You may need to ask circle to send code"
            android:textColor="@color/orange"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintVertical_bias="0.55"
            app:layout_constraintStart_toStartOf="@id/pin_view"
            app:layout_constraintEnd_toEndOf="@id/pin_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.8"
            android:text="Submit"
            android:textAllCaps="false"
            android:background="@drawable/orange_rounded_button"
            app:layout_constraintVertical_bias="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:text="OR"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/orange"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        android:background="@drawable/circle_drawable_white_with_orange_stroke"
        app:layout_constraintHorizontal_bias="0.1"
        android:translationZ="@dimen/_100sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cons_1"
        app:layout_constraintBottom_toTopOf="@id/cons_2"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.3"
        android:background="@color/orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mat_txt_1_cons_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have a Code?"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/_16ssp"
            android:layout_marginTop="@dimen/_40sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mat_txt_2_cons_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We'll give you code to share"
            android:textColor="#80FFFFFF"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mat_txt_1_cons_2"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create_circle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.8"
            android:text="Create Circle"
            android:textColor="@color/orange"
            android:textAllCaps="false"
            android:background="@drawable/white_rounded_button"
            app:backgroundTint="@color/white"
            app:layout_constraintVertical_bias="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>